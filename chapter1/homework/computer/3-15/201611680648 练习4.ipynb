    "n=int(input('请输入一个整数，并以回车结束'))\n",
    "t=n\n",
    "p=n\n",
    "print('总和为',t)\n",
    "print('积为',p)\n",
    "while(t>=n and p<=n**2):\n",
    "    n=int(input('请输入一个整数，并以回车结束'))\n",
    "    t+=n\n",
    "    p*=n\n",
    "    print('总和为',t)\n",
    "    print('积为',p)"
   ]
